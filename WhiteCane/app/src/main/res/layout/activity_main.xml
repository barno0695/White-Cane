<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.whitecane.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageButton
        android:id="@+id/showIP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="Show I P"
        android:elevation="5dp"
        android:src="@android:drawable/ic_menu_preferences"
        android:translationZ="10dp" />

    <EditText
        android:id="@+id/modeText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Main mode"
        android:textColor="#FFFFFF"
        android:translationZ="5dp"
        android:visibility="visible" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:elevation="5dp"
        android:id="@+id/helpButton"
        android:src="@android:drawable/ic_menu_help"
        android:contentDescription="Help" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:elevation="5dp"
        android:id="@+id/showRating"
        android:src="@android:drawable/btn_star"
        android:contentDescription="Ratings"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/captionButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Get Scene Description"
            android:elevation="5dp"
            android:src="@mipmap/ic_caption" />

        <ImageButton
            android:id="@+id/faceModeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="People mode"
            android:elevation="5dp"
            android:src="@mipmap/ic_people" />

        <ImageButton
            android:id="@+id/navigationButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Navigation"
            android:elevation="5dp"
            android:src="@mipmap/ic_nav" />

        <ImageButton
            android:id="@+id/findButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Help me Find"
            android:elevation="5dp"
            android:src="@mipmap/ic_find" />

        <ImageButton
            android:id="@+id/ocrButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="O C R"
            android:elevation="5dp"
            android:src="@mipmap/ic_ocr" />

        <ImageButton
            android:id="@+id/qaButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Question Answering"
            android:elevation="5dp"
            android:src="@mipmap/ic_qa" />

        <ImageButton
            android:id="@+id/faceCountButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Count"
            android:elevation="5dp"
            android:src="@mipmap/ic_count"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/faceAgeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Age"
            android:elevation="5dp"
            android:src="@mipmap/ic_age"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/faceGenderButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Gender"
            android:elevation="5dp"
            android:src="@mipmap/ic_gender"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/faceEmotionButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Emotion"
            android:elevation="5dp"
            android:src="@mipmap/ic_emotion"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:text="Loading..."
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:id="@+id/progress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:textSize="40dp"
        android:background="#F3F3F3"
        android:textColor="#000000"
        android:textAlignment="gravity"
        android:gravity="center"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="115dp"
        android:elevation="5dp"
        android:background="#F3F3F3"
        android:id="@+id/ratingsLayout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/ratingBar"
        android:elevation="5dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_green_dark"
            android:id="@+id/giveRating"
            android:layout_below="@id/ratingBar"
            android:layout_centerHorizontal="true"
            android:text="Rate"
            android:textColor="#F3F3F3"
            android:textSize="30dp"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_edit" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ipLayout"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#F3F3F3"
        android:elevation="5dp"
        android:translationZ="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/setIPText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Set Server IP"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ipText"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_below="@+id/setIPText"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="xxxx"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/changeIP"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/ipText"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_edit"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:paddingBottom="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cameraPreview">
        </FrameLayout>

        <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageHolder"
        android:layout_height="300dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Camera"
            android:id="@+id/cameraButton"
            android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gallery"
            android:visibility="gone"
            android:id="@+id/galleryButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Listen again"
            android:visibility="gone"
            android:id="@+id/listenButton" />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/captionText"
        android:text="@string/welcome_note" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/txtSpeechInput"
        android:text="@string/welcome_note"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Command"
        android:visibility="gone"
        android:id="@+id/commandButton" />
    </LinearLayout>


</RelativeLayout>
